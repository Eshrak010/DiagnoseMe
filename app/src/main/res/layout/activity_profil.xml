<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilpicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/slim"
        android:layout_marginTop="20dp"
        app:shapeAppearanceOverlay="@style/circularImageShape"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/profilEmail"
        android:layout_marginTop="20dp"
        android:layout_below="@id/profilpicture"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/profilcorner"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/emailP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:enabled="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/profilname"
        android:layout_marginTop="20dp"
        android:layout_below="@id/profilEmail"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/profilcorner"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/nameP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/profilPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@id/profilname"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/profilcorner"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/passP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profilPassword"
        android:background="@drawable/buttonblueprofil"
        android:text="save"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:id="@+id/buttonsaveprofil"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonsaveprofil"
        android:background="@drawable/cornerraduisthin"
        android:text="Discard"
        android:id="@+id/discradButton"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/discradButton"
        android:background="@drawable/corner_radius_thin_red"
        android:text="Delete account"
        android:id="@+id/DeleteMe"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>