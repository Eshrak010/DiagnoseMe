<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginStart="20dp"
                android:id="@+id/departmentText"
                android:layout_marginBottom="20dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/departmentText"
    android:text="see All"
    android:id="@+id/seeAllDep"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="10dp"
    android:textColor="@color/black"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3176C5B0"
    android:layout_below="@id/departmentText"
    android:paddingBottom="20dp"
    android:id="@+id/linearDep">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:background="@drawable/cornerraduisthin"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/lineartHeart"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:id="@+id/heartpic"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart"
                        android:adjustViewBounds="true"
                        />

                    <TextView
                        android:id="@+id/hearttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:background="@drawable/cornerraduisthin"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/linearLungs"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:id="@+id/Lungspic"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lungs"
                        android:adjustViewBounds="true"
                        />

                    <TextView
                        android:id="@+id/lungstext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:background="@drawable/cornerraduisthin"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/lineartBrain"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/brainpic"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/brain"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/braintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brain"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialist"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_below="@id/linearDep"
                android:layout_marginStart="20dp"
                android:id="@+id/specialistText"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/specialistText"
                android:text="see All"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:id="@+id/seeAllDoc"
                />

            <LinearLayout
                android:id="@+id/linearSpec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3176C5B0"
                android:orientation="vertical"
                android:layout_below="@id/specialistText"
                android:paddingBottom="20dp">

                <RelativeLayout
                    android:id="@+id/DoctorInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/arrow"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cornerraduisthin">

                    <!-- Rounded Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/doctorImage"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jamil"
                        app:shapeAppearance="@style/circularImageShape" />
                    <!-- Text -->
                    <TextView
                        android:id="@+id/doctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/doctorImage"
                        android:text="Dr Jamil"
                        android:layout_toRightOf="@id/doctorImage"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiologist"
                        android:layout_below="@id/doctorName"
                        android:layout_toRightOf="@id/doctorImage"
                        android:textColor="@color/black"
                        android:id="@+id/DoctorJob"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/doctorImage"
                        android:layout_below="@id/DoctorJob"
                        android:textColor="@color/black"
                        android:id="@+id/textExp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/doctorImage"
                        android:layout_below="@id/textExp"
                        android:id="@+id/experience"
                        android:text="5 years"
                        android:textColor="@color/black"/>


                    <!-- RatingBar -->
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorImage"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="4dp"
                        android:numStars="5"
                        android:progressTint="#ffc600"
                        android:rating="4"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/DoctorInformation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/arrow"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/cornerraduisthin">

                    <!-- Rounded Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/doctorImage2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jamila"
                        app:shapeAppearance="@style/circularImageShape" />
                    <!-- Text -->
                    <TextView
                        android:id="@+id/doctorName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/doctorImage2"
                        android:text="Dr Jamil"
                        android:layout_toRightOf="@id/doctorImage2"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiologist"
                        android:layout_below="@id/doctorName2"
                        android:layout_toRightOf="@id/doctorImage2"
                        android:textColor="@color/black"
                        android:id="@+id/DoctorJob2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/doctorImage2"
                        android:layout_below="@id/DoctorJob2"
                        android:textColor="@color/black"
                        android:id="@+id/textExp2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/doctorImage2"
                        android:layout_below="@id/textExp2"
                        android:id="@+id/experience2"
                        android:text="5 years"
                        android:textColor="@color/black"/>


                    <!-- RatingBar -->
                    <RatingBar
                        android:id="@+id/ratingBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorImage2"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="4dp"
                        android:numStars="5"
                        android:progressTint="#ffc600"
                        android:rating="4"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>